<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvUsername2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/usernameHint"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivProfileImage2"
        app:layout_constraintStart_toStartOf="@+id/ivProfileImage2"
        app:layout_constraintTop_toBottomOf="@+id/ivProfileImage2" />

    <ImageView
        android:id="@+id/ivProfileImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_placeholder" />

    <Button
        android:id="@+id/btFollow"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yes_confirm_button"
        android:text="Follow"
        app:layout_constraintEnd_toStartOf="@+id/ivProfileImage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProfileCarbies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btFollow" />
</androidx.constraintlayout.widget.ConstraintLayout>